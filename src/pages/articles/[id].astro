---
import ArticleDetailIsland from "../../islands/ArticleDetailIsland";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { articlesData } from "../../lib/articlesData";
const { id } = Astro.params;

// 为确保 /articles/:id 路由可访问，基于本地数据生成静态路径
export async function getStaticPaths() {
  return articlesData.map((a) => ({ params: { id: String(a.id) } }));
}
---
<BaseLayout>
  <ArticleDetailIsland id={id} client:visible />
</BaseLayout>
