---
import ThemeToggle from "../islands/ThemeToggle";
import ToasterHost from "../islands/ToasterHost";
import "../index.css";
import "../styles/custom.css";
import "../styles/animations.css";
---
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" />
    <slot name="head" />
  </head>
  <body class="bg-gray-50 text-gray-800 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-300 ease-in-out">
    <header class="sticky top-0 z-30 border-b border-gray-200 dark:border-gray-800 backdrop-blur-md bg-white/70 text-gray-900 dark:bg-gray-900/70 dark:text-gray-100 transition-colors duration-300 ease-in-out">
      <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 font-bold text-lg">
          <span class="inline-flex w-8 h-8 rounded-full bg-gradient-to-r from-blue-500 to-purple-600 items-center justify-center text-white" style="animation: spin 6s linear infinite;">
            <i class="fa-solid fa-code"></i>
          </span>
          <span>个人博客</span>
        </a>
        <nav class="flex items-center gap-6 text-sm">
          <a href="/" class="hover:text-blue-600 dark:hover:text-blue-400">首页</a>
          <a href="/articles" class="hover:text-blue-600 dark:hover:text-blue-400">文章</a>
          <a href="/about" class="hover:text-blue-600 dark:hover:text-blue-400">关于</a>
          <a href="/timeline" class="hover:text-blue-600 dark:hover:text-blue-400">历程</a>
          <a href="/skills" class="hover:text-blue-600 dark:hover:text-blue-400">技能</a>
          <a href="/guestbook" class="hover:text-blue-600 dark:hover:text-blue-400">留言板</a>
          <ThemeToggle client:load />
        </nav>
      </div>
    </header>
    <ToasterHost client:load />
    <slot />
  </body>
</html>
